<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card-card-body bg-dark p-4 text-white rounded-0">
<h1>Editar tu tarea</h1>
<form action="/task/{{task._id}}/edit" method="post">
    <div class="mb-3">

    <input type="text"  class="form-control rounded-0 bg-dark text-white" name="title" value="{{task.title}}" placeholder="titulo">
    </div>
    
    <textarea  class="form-control rounded-0 bg-dark text-white"
    name="description" 
    id="" 
    cols="30" 
    rows="3" 
    placeholder="Descripcion">{{task.description}}</textarea>

    <button class="btn btn-primary mt-4">Update</button>
</form>
</div>
        </div>
    </div>
</div>